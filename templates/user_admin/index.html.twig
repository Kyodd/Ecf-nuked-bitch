{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Birthdate</th>
				<th>Adresse</th>
				<th>Codepostal</th>
				<th>Ville</th>
				<th>Phonenumber</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}

				{% if user.isBanned == false %}

					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>

						<td>
							{% if 'ROLE_ADMIN' in user.roles %}
								Administrateur
							{% elseif 'ROLE_USER' in user.roles %}
								Utilisateur
							{% endif %}
						</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
						<td>{{ user.adresse }}</td>
						<td>{{ user.codepostal }}</td>
						<td>{{ user.ville }}</td>
						<td>{{ user.phonenumber }}</td>
						<td>
							<a href="{{ path('app_user_admin_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_user_admin_edit', {'id': user.id}) }}">edit</a>
							<a href="{{ path('app_ban_user', {'id': user.id}) }}" onclick="return confirm('Vous allez bannir {{ user.nom }} {{ user.prenom }}. Etes en êtes-vous sûr?')" class="btn btn-danger">Bannir</a>
						</td>
					</tr>

				{% endif %}

			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_admin_new') }}">Create new</a>
{% endblock %}
