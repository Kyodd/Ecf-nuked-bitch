{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ livre.Nom }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.Auteur }}</td>
            </tr>
            <tr>
                <th>AnneePublication</th>
                <td>{{ livre.anneePublication }}</td>
            </tr>
            <tr>
                <th>Resume</th>
