{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <h1>Gestion des salles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
         
            <tr>
            
                <td>{{ salle.id }}</td>
                <td>{{ salle.nom }}</td>
                <td>{{ salle.capacite }}</td>
                <td>
                  <div class='btn' class="crud">
                      {{ include('admin_salle/_delete_form.html.twig') }}
                        <a class='btn' href="{{ path('app_admin_salle_show', {'id': salle.id}) }}"><i class="material-icons">info</i>Informations</a>
                        <a class='btn' href="{{ path('app_admin_salle_edit', {'id': salle.id}) }}"><i class="material-icons">edit</i>Modifier</a>
                      
                        <a class='btn' href="{{ path('app_admin_salle_disponibilites', {'id': salle.id}) }}"><i class="material-icons">calendar_month</i>Disponibilit√©s</a>
                  </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class='btn btn-dark' href="{{ path('app_admin_salle_new') }}"><i class="material-icons">add</i>Ajouter une nouvelle salle</a>
{% endblock %}
